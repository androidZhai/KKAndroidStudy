<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kkandroidstudy.activity.HttpsActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:onClick="sendByHttpUrlConnection"
        android:text="通过httpurlconnection访问https" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:onClick="sendByHttpUrlConnection2"
        android:text="通过httpurlconnection访问https(第二种)" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:onClick="sendByHttpUrlConnection3"
        android:text="通过httpurlconnection访问自签名证书的https" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:onClick="sendByOkHttp"
        android:text="通过okhttp访问https" />
</LinearLayout>
